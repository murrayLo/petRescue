<h2>Forgot your password?</h2>
</br>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: false,
                placeholder: "Email" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Reset Password", class:"btn btn-success" %>
  </div>
  <p></p>
  <%= link_to "Back to Log in", new_session_path(resource_name), class:"btn btn-outline-primary" %>  <%= link_to "Back to Sign up", new_registration_path(resource_name), class:"btn btn-outline-primary" %>
<% end %>
