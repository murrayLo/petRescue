<p id="notice"><%= notice %></p>

<h1>Founds</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Animal</th>
      <th>Breed</th>
      <th>Colour</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @founds.each do |found| %>
      <tr>
        <td><%= found.date %></td>
        <td><%= found.location %></td>
        <td><%= found.animal %></td>
        <td><%= found.breed %></td>
        <td><%= found.colour %></td>
        <td><%= found.image %></td>
        <td><%= link_to 'Show', found %></td>
        <td><%= link_to 'Edit', edit_found_path(found) %></td>
        <td><%= link_to 'Destroy', found, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Found', new_found_path %>
