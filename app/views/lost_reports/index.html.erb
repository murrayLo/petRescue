<p id="notice"><%= notice %></p>

<h1>Lost Reports</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Animal</th>
      <th>Breed</th>
      <th>Colour</th>
      <th>Image</th>
      <th>Additionalinfo</th>
      <th>Reporter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lost_reports.each do |lost_report| %>
      <tr>
        <td><%= lost_report.date %></td>
        <td><%= lost_report.location %></td>
        <td><%= lost_report.animal %></td>
        <td><%= lost_report.breed %></td>
        <td><%= lost_report.colour %></td>
        <td><%= lost_report.image %></td>
        <td><%= lost_report.additionalInfo %></td>
        <td><%= lost_report.reporter %></td>
        <td><%= link_to 'Show', lost_report %></td>
        <td><%= link_to 'Edit', edit_lost_report_path(lost_report) %></td>
        <td><%= link_to 'Destroy', lost_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lost Report', new_lost_report_path %>
