<p id="notice"><%= notice %></p>

<h1>Losts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>Animal</th>
      <th>Breed</th>
      <th>Colour</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @losts.each do |lost| %>
      <tr>
        <td><%= lost.date %></td>
        <td><%= lost.location %></td>
        <td><%= lost.animal %></td>
        <td><%= lost.breed %></td>
        <td><%= lost.colour %></td>
        <td><%= lost.image %></td>
        <td><%= link_to 'Show', lost %></td>
        <td><%= link_to 'Edit', edit_lost_path(lost) %></td>
        <td><%= link_to 'Destroy', lost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lost', new_lost_path %>
