<h2>Sent Items</h2>
</br>

<%= link_to 'Return to Inbox', messages_path, class:"btn btn-outline-dark" %>
<p></p>
<table class="table table-hover">
  <thead>
    <tr class="table-secondary">
      <th scope="row">Subject</th>
      <th scope="row">Sent To</th>
      <th scope="row">Sent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <!-- only show messages sent from the current user -->
      <% if message.user_id == current_user.id %>   
        <tr class="table-light">
          <td><%= message.subject %></td>
          <td><%= message.username_to %></td>
          <td><%= message.created_at %></td>
          <td><%= link_to 'View', message, class:"btn btn-outline-dark" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

